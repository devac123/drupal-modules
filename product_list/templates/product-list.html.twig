<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<div class="container">
    <table class="table table-striped">
        <thead>
            <th>#</th>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Product Type</th>
            <th>Product Image</th>
            <th>Action</th>
        </thead>
        <tbody>
           
            {% for prod in  params %}
                <tr>
                <td>{{loop.index}}</td>
                <td>{{prod.pr_title}}</td>
                <td><b>$</b>{{prod.pr_price/2}}</td>
                <td>{{prod.pr_type}}</td>
                <td></td>
                <td>
                    <a href="http://localhost/ecommerce/web/product/list/{{prod.nid}}"><i class="fas fa-trash"></i></a>
                </td>
                </tr>
            {% endfor %}

        </tbody>
      </table>
      <a href="http://localhost/ecommerce/web/product/add-product" class="btn btn-dark text-light">Add Product</a>
</div>